{
  "name": "rheactor-event-store",
  "description": "Implementation of an event store based on redis",
  "version": "0.0.0-development",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=testing mocha --compilers js:babel-register --reporter=dot --timeout=1350 test/\\*.js",
    "test:coverage": "NODE_ENV=nyc babel src --out-dir instrumented-src > /dev/null && nyc --reporter=text-summary --reporter=lcov npm run test",
    "test:coverage-travis": "npm run test:coverage && codeclimate-test-reporter < ./coverage/lcov.info && rm -rf ./coverage",
    "lint": "standard",
    "semantic-release": "semantic-release pre && cp package.json dist && npm publish dist && semantic-release post",
    "precommit": "npm run lint && npm test",
    "commitmsg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ResourcefulHumans/rheactor-event-store.git"
  },
  "author": "Resourceful Humans <info@resourceful-humans.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ResourcefulHumans/rheactor-event-store/issues"
  },
  "homepage": "https://github.com/ResourcefulHumans/rheactor-event-store#readme",
  "dependencies": {
    "bluebird": "^3.4.7",
    "joi": "^10.1.0",
    "lodash": "^4.17.4",
    "redis": "^2.6.3",
    "rheactor-value-objects": "^5.0.0",
    "tcomb": "^3.2.16"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-env": "^1.1.7",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.4.0",
    "husky": "^0.12.0",
    "mocha": "^3.2.0",
    "mocha-lcov-reporter": "^1.2.0",
    "nyc": "^10.0.0",
    "semantic-release": "^6.3.2",
    "standard": "^8.6.0",
    "validate-commit-msg": "^2.8.2"
  }
}
