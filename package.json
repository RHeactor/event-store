{
  "name": "rheactor-event-store",
  "description": "Implementation of an event store based on redis",
  "main": "index.js",
  "scripts": {
    "lint": "standard",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "test": "environment=testing mocha --reporter=dot --timeout=1350 test/\\*.js",
    "test:coverage": "environment=testing istanbul cover _mocha test/\\*.js",
    "test:coverage-travis": "environment=testing istanbul cover _mocha --report lcovonly -- -R dot --timeout=1350 test/\\*.js && codeclimate-test-reporter < ./coverage/lcov.info && rm -rf ./coverage",
    "precommit": "npm run lint",
    "commitmsg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ResourcefulHumans/rheactor-event-store.git"
  },
  "author": "Resourceful Humans <info@resourceful-humans.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ResourcefulHumans/rheactor-event-store/issues"
  },
  "homepage": "https://github.com/ResourcefulHumans/rheactor-event-store#readme",
  "dependencies": {
    "bluebird": "^3.4.1",
    "joi": "^10.0.1",
    "lodash": "^4.14.0",
    "redis": "^2.6.2",
    "rheactor-value-objects": "^3.0.0",
    "tcomb": "^3.2.7"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.4.0",
    "istanbul": "^0.4.4",
    "husky": "<2.0.0",
    "mocha": "^3.0.0",
    "mocha-lcov-reporter": "^1.2.0",
    "standard": "^8.0.0",
    "validate-commit-msg": "^2.6.1",
    "semantic-release": "^6.3.2"
  }
}
